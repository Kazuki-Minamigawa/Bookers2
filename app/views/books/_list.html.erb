<h1>New book</h1>
<div class="error_messages">
  <% if book.errors.any? %>
    <div class="error_explanation">
      <h2><%= book.errors.count %>errors prohibited this book from being saved:</h2>
      <ul>
        <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>


<div class="form">
  <%= form_for(book) do |f| %>
    <h4>Title</h4>
    <div class="col-xs-12"><%= f.text_field :title %></div>
    <h4>Opinion</h4>
    <div class="col-xs-12"><%= f.text_area :body %></div>
    <input type="submit" class="col-xs-12 btn btn-primary btn-block" value="Create Book">
  <% end %>
</div>
